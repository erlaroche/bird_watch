<div class="full-width-row-two">
  
  <div class="large-4 medium-6 small-10 small-centered columns">
    <p>
      <strong>Title:</strong>
      <%= @clip.title %>
    </p>
     
    <p>
      <strong>Created By:</strong> 
      <%= link_to "#{@clip.user.name}", @clip.user %> %>
     <iframe width="420" height="315" src="//www.youtube.com/embed/<%= @clip.youtube_id %>" frameborder="0" allowfullscreen></iframe>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @clip.text %>
    </p>

    <h2>Comments</h2>
    <%= render @clip.remarks %>


    <h2>Add a comment:</h2>
    <%= render "remarks/form" %>

    <%= link_to 'Back', clips_path %>
    <%= link_to 'Edit', edit_clip_path(@clip) %>
    <%= link_to "Welcome Page", controller: "welcome" %>
  </div>
</div>


