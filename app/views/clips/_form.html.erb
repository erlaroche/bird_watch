<div class="large-6 medium-6 small-10 small-centered columns">
  <%= form_for @clip do |f| %>
  <!-- throw an error if no title or no text in clip entry -->
    <% if @clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <p>
    <span class= "help-block">The title of your entry</span>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      
    </p>

    <p>
    <span class= "help-block">The 'share' link from your youtube video.</span>
      <%= f.label :youtube_id %><br>
      <%= f.url_field :youtube_id %>
    </p>
   
    <p>
    <span class= "help-block">The description of your entry</span>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
   
    <p>
     <%= f.submit 'Create', :class=> 'button' %>
    </p>
  <% end %>
</div>
