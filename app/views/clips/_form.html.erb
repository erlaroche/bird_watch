<div class="large-6 medium-6 small-10 small-centered columns">
  <%= form_for @clip do |f| %>
  <!-- throw an error if no title or no text in clip entry -->
    <% if @clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <p>
    <h3>The title of your entry</h3>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      
    </p>

    <p>
    <h3>The link from your youtube video.</h3>
      <%= f.label :youtube_id %><br>
      <%= f.url_field :youtube_id, class: 'form-control', required: true %>
    </p>
   
    <p>
    <h3>The description of your entry</h3>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
   
    <p>
     <%= f.submit 'Create', :class=> 'button' %>
    </p>
  <% end %>
</div>
