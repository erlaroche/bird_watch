 @import "foundation";

.full-width-row-two {
  width: 100%;
  background-image: image-url('moreflyingbirds.jpg');
  min-height: 680px; // to make it full-screen top to bottom on most screens
  background-size: cover; //this resizes the background for any screen size
  padding: 6em 0em; //give it some breathing room from the top
  text-align: center;
}

h1, h2, h3, p {
  font-family: 'Galindo', cursive;
}

a:link {
  color: black;
}

a:active {
  color: #8080B2;
}

a:visited {
  color: #00003D;
}

a:hover {
// font-family: Ariel;
cursor: pointer;
}

.button {
  padding: 10px 15px;
  border-radius: 4px;
  border: 1px solid #20538D;
  background-color: #8080B2;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
  font-family: 'Galindo', cursive;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
  font-size: 20px;
  text-transform: uppercase;
  display: block;
  margin-top: 5px;
  margin-bottom: 5px;
  padding: 5px, 10px, 5px, 10px;
}

